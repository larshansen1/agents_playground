# Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration (REQUIRED)
POSTGRES_USER=openwebui
POSTGRES_PASSWORD=<CHANGE-THIS-TO-STRONG-PASSWORD>
POSTGRES_DB=openwebui
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# API Keys (REQUIRED)
OPENROUTER_API_KEY=<your-openrouter-api-key>
WEBUI_SECRET_KEY=<generate-with: openssl rand -hex 32>

# OpenAI/OpenRouter Configuration
OPENAI_API_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=google/gemini-2.5-flash

# Application Ports (Optional - defaults shown)
APP_EXTERNAL_PORT=8000
POSTGRES_EXTERNAL_PORT=5432
OPENWEBUI_PORT=3001
GRAFANA_PORT=3002

# Tracing Configuration
OTLP_ENDPOINT=tempo:4317
TRACING_ENABLED=true

# Open WebUI Configuration
ENABLE_SIGNUP=true
DEFAULT_USER_ROLE=user
ENABLE_OLLAMA_API=false
QDRANT_URI=http://qdrant:6333

# Grafana Security (IMPORTANT: Change for production!)
GF_AUTH_ANONYMOUS_ENABLED=false
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=<generate-strong-password>
GF_AUTH_DISABLE_LOGIN_FORM=false

# Certificate Paths (for mTLS)
CA_CERT_PATH=/app/backend/data/certs/ca-cert.pem
CLIENT_CERT_PATH=/app/backend/data/certs/client-cert.pem
CLIENT_KEY_PATH=/app/backend/data/certs/client-key.pem

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8443
